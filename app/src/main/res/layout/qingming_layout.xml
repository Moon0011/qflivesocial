<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/call_evaluation_head_rl_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_arrow_left"
            android:layout_width="15dp"
            android:layout_height="11.3dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/call_evaluation_head_arrow_left_margin_left"
            android:src="@mipmap/arrow_left3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/qianming"
            android:textColor="#ff5491"
            android:textSize="@dimen/call_evaluation_head_txt_size" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="17.7dp"
            android:background="@color/transparent"
            android:text="@string/save"
            android:textColor="#ff5491"
            android:textSize="@dimen/call_evaluation_head_txt_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20.3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="124.3dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/et_qianming"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"
            android:background="@null"
            android:gravity="top"
            android:paddingTop="19.3dp"
            android:text="哦哦哦哦哦哦哦哦"
            android:textColor="#44474b"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>