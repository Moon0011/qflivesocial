<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_dark">

    <uk.co.senab.photoview.PhotoView
        android:id="@+id/photoView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center" />

    <RelativeLayout
        android:id="@+id/rl_top_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/anchor_detail_fl_video_top_height"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_arrow_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/anchor_detail_fl_video_top_arrowleft_margin_left"
            android:src="@mipmap/arrow_left3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="查看大图"
            android:textColor="#ff5491" />
    </RelativeLayout>


</FrameLayout>