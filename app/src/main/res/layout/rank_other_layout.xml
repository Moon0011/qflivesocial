<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ranklist_other_ll_height1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ranklist_other_ll_height2"
        android:gravity="left|center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="@dimen/ranklist_other_num_width"
            android:layout_height="@dimen/ranklist_other_num_height"
            android:layout_marginBottom="@dimen/ranklist_other_num_margin_bottom"
            android:layout_marginLeft="@dimen/ranklist_other_num_margin_left"
            android:layout_marginTop="@dimen/ranklist_other_num_margin_top"
            android:text="4"
            android:textColor="#888888"
            android:textStyle="bold" />

        <com.qingfeng.livesocial.widget.RoundedImageView
            android:id="@+id/imghead"
            android:layout_width="@dimen/ranklist_other_head_width"
            android:layout_height="@dimen/ranklist_other_head_height"
            android:layout_marginBottom="@dimen/ranklist_other_head_margin_bottom"
            android:layout_marginLeft="@dimen/ranklist_other_head_margin_left"
            android:layout_marginTop="@dimen/ranklist_other_head_margin_top"
            android:scaleType="fitXY"
            android:src="@mipmap/f_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ranklist_other_discribe_ll_margin_left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="喵酱"
                android:textColor="#333333"
                android:textSize="@dimen/ranklist_top3_discribe_nickname_txt_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ranklist_other_discribe_care_num_margin_top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ranklist_attention_num"
                    android:textColor="#aaaaaa"
                    android:textSize="@dimen/ranklist_top3_discribe_carenum_txt_num_size" />

                <TextView
                    android:id="@+id/tv_attention_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ranklist_top3_discribe_carenum_txt_num_margin_left"
                    android:text="888"
                    android:textColor="#ff5491"
                    android:textSize="@dimen/ranklist_top3_discribe_carenum_txt_num_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ranklist_divider_height"
        android:background="#f0f0f0" />
</LinearLayout>