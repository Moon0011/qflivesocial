<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="93.7dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92.7dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="51.3dp"
            android:layout_height="54.3dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/f_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="19dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9.7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小明"
                    android:textColor="#4d4d4d"
                    android:textSize="13.8sp" />

                <RelativeLayout
                    android:layout_width="@dimen/call_evaluation_anchor_introduce_sex_rl_width"
                    android:layout_height="@dimen/call_evaluation_anchor_introduce_sex_rl_height"
                    android:layout_marginLeft="@dimen/call_evaluation_anchor_introduce_sex_rl_margin_left">

                    <ImageView
                        android:id="@+id/imghead2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/recommend_sex_bg" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="@dimen/call_evaluation_anchor_introduce_sex_age_margin_right"
                        android:text="21"
                        android:textColor="@color/white"
                        android:textSize="@dimen/call_evaluation_anchor_introduce_sex_age_txt_size" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27.3dp"
                android:text="我滴个神"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee" />
</LinearLayout>