<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="286.3dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="37.7dp"
        android:orientation="vertical"
        android:paddingBottom="9dp">

        <Button
            android:id="@+id/btn_setBigBg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffff"
            android:text="设置为背景"
            android:textColor="#000000"
            android:textSize="13.8sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />

        <Button
            android:id="@+id/btn_watchbigPic"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffff"
            android:text="查看大图"
            android:textColor="#000000"
            android:textSize="13.8sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffff"
            android:text="删除"
            android:textColor="#000000"
            android:textSize="13.8sp" />

        <Button
            android:id="@+id/btn_pop_cancel"
            android:layout_width="match_parent"
            android:layout_height="41.3dp"
            android:layout_marginTop="15dp"
            android:background="#ffff"
            android:text="取消"
            android:textColor="#ff5491"
            android:textSize="13.8sp" />

    </LinearLayout>


</RelativeLayout>


