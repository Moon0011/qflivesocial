<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="90.3dp"
        android:layout_height="30dp"
        android:layout_marginLeft="19.7dp"
        android:layout_marginTop="21.3dp"
        android:background="@mipmap/submit_bg"
        android:text="上传微信收款码"
        android:textColor="@color/white"
        android:textSize="12.5sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24.7dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="手 机 号"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.7dp"
            android:text=":" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入你的手机号"
            android:textColor="#d8d8d8"
            android:textSize="13.8sp" />
    </LinearLayout>

    <View
        android:layout_width="339dp"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:layout_marginTop="14.7dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="验 证 码"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.7dp"
            android:text=":" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@null"
            android:gravity="center"
            android:hint="输入验证码"
            android:textColor="#d8d8d8"
            android:textSize="13.8sp" />

        <Button
            android:layout_width="82dp"
            android:layout_height="30.7dp"
            android:background="@mipmap/veriy_code_bg"
            android:text="发送验证码"
            android:textColor="#ff5491"
            android:textSize="13.8sp" />
    </LinearLayout>

    <View
        android:layout_width="339dp"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:layout_marginTop="14.7dp"
        android:background="#000000" />

    <Button
        android:id="@+id/btn_sumbit"
        android:layout_width="314.7dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="26.7dp"
        android:background="@mipmap/submit_bg"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="13.8sp" />
</LinearLayout>