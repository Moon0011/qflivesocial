<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/anchor_today_recommend_item_ll_padding_bottom"
    android:paddingLeft="@dimen/anchor_today_recommend_item_ll_padding_left"
    android:paddingRight="@dimen/anchor_today_recommend_item_ll_padding_right">

    <FrameLayout
        android:layout_width="@dimen/anchor_today_recommend_item_width"
        android:layout_height="@dimen/anchor_today_recommend_item_height">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@color/bgColor_overlay" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/anchor_today_recommend_item_img_status_margin_left"
            android:layout_marginTop="@dimen/anchor_today_recommend_item_img_status_margin_top"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/anchor_today_recommend_item_img_status_width"
                android:layout_height="@dimen/anchor_today_recommend_item_img_status_height"
                android:layout_centerInParent="true"
                android:layout_gravity="top"
                android:scaleType="fitXY"
                android:src="@mipmap/hot_chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="热聊"
                android:textColor="@color/white"
                android:textSize="@dimen/anchor_today_recommend_item_img_status_txt_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/anchor_today_recommend_item_img_discribe_ll_margin_bottom"
            android:layout_marginLeft="@dimen/anchor_today_recommend_item_img_discribe_ll_margin_left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小明"
                    android:textColor="@color/white"
                    android:textSize="@dimen/anchor_today_recommend_item_img_discribe_nickname_txt_size" />

                <RelativeLayout
                    android:layout_width="@dimen/anchor_today_recommend_item_img_discribe_sex_img_ll_width"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/anchor_today_recommend_item_img_discribe_sex_img_margin_left"
                        android:scaleType="fitXY"
                        android:src="@mipmap/sex_count_f" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/anchor_today_recommend_item_img_discribe_sex_img_age_txt_margin_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:text="12"
                        android:textColor="@color/white"
                        android:textSize="@dimen/anchor_today_recommend_item_img_discribe_sex_img_age_txt_size" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/anchor_today_recommend_item_img_discribe_total_talktime_margin_top"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_phone_talk_time"
                    android:textColor="@color/white"
                    android:textSize="@dimen/anchor_today_recommend_item_img_discribe_total_talktime_txt_size" />

                <TextView
                    android:id="@+id/tv_total_talktime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2583分钟"
                    android:textColor="@color/white"
                    android:textSize="@dimen/anchor_today_recommend_item_img_discribe_total_talktime_txt_size" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>