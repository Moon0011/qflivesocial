<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="28.8dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="18.8dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="right|center"
        android:paddingLeft="20dp"
        android:background="@mipmap/calling_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/host_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="小明"
            android:textColor="@color/white"
            android:textSize="9.8sp" />

        <TextView
            android:id="@+id/broadcasting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:text="00:00:00"
            android:textColor="@color/white"
            android:textSize="9.8sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/head_icon"
        android:layout_width="28.8dp"
        android:layout_height="28.8dp"
        android:src="@mipmap/f_head" />

</FrameLayout>

