<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/call_evaluation_head_rl_height">

        <ImageView
            android:id="@+id/img_arrow_left"
            android:layout_width="15dp"
            android:layout_height="11.3dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/call_evaluation_head_arrow_left_margin_left"
            android:src="@mipmap/arrow_left3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/anchor_anthen"
            android:textColor="#ff5491"
            android:textSize="@dimen/call_evaluation_head_txt_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80.3dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="7.3dp"
            android:text="*请您如实准确填写本人信息,否则驳回认证"
            android:textColor="#ff5491"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.7dp"
            android:layout_marginTop="27dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="4.7dp"
                android:layout_height="4.7dp"
                android:layout_gravity="center"
                android:src="@mipmap/round_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10.7dp"
                android:text="姓名"
                android:textColor="#333333"
                android:textSize="12.5sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:background="@null"
                android:hint="请填写身份证上的姓名"
                android:textColorHint="#999999"
                android:textSize="12.5sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.7dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="4.7dp"
                android:layout_height="4.7dp"
                android:layout_gravity="center"
                android:src="@mipmap/round_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10.7dp"
                android:text="身份证号"
                android:textColor="#333333"
                android:textSize="12.5sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="22dp"
                android:background="@null"
                android:hint="请填写身份证上的姓名"
                android:textColorHint="#999999"
                android:textSize="12.5sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17.7dp"
                android:layout_marginTop="21.3dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="4.7dp"
                    android:layout_height="4.7dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/round_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10.7dp"
                    android:text="上传身份证"
                    android:textColor="#333333"
                    android:textSize="12.5sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33.3dp"
                android:layout_marginTop="27.7dp"
                android:text="*照片清晰可辩,信息完整无缺失"
                android:textColor="#ff5491"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33.3dp"
                android:layout_marginTop="8.7dp"
                android:text="*身份照片真实,严禁经过PS处理"
                android:textColor="#ff5491"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="107.3dp"
            android:layout_height="70.7dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="19.7dp"
            android:src="@mipmap/add_icard" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="79.3dp"
        android:layout_marginTop="48dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="15.7dp"
            android:layout_height="15.7dp"
            android:background="@mipmap/round_red">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/sure_icon" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.3dp"
            android:text="我已阅读并同意"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《萌遇认证须知》"
            android:textColor="#333333"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sumbit"
        android:layout_width="340.7dp"
        android:layout_height="40.7dp"
        android:layout_gravity="center"
        android:layout_marginTop="11dp"
        android:background="@mipmap/anthen_btn"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="提交成功后,进入视频认证服务"
        android:textColor="#ff5491"
        android:textSize="12sp" />
</LinearLayout>