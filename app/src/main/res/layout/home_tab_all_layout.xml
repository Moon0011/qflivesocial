<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="22dp">

        <RelativeLayout
            android:layout_width="@dimen/today_recommend_img_width"
            android:layout_height="@dimen/today_recommend_img_height">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/recommend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/today_recommend_img_txt_margin_left"
                android:text="今日推荐"
                android:textColor="@color/white"
                android:textSize="9.8sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/today_recommend_img_arrow_txt_margin_right"
            android:layout_toLeftOf="@+id/img_arrow"
            android:text="查看全部" />

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="@dimen/today_recommend_img_arrow_right_width"
            android:layout_height="@dimen/today_recommend_img_arrow_right_height"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="5.3dp"
            android:src="@mipmap/arrow_right" />
    </RelativeLayout>

    <com.qingfeng.livesocial.widget.HorizontalListView
        android:id="@+id/hor_listview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hori_listview_height" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@mipmap/color_divider" />

    <include layout="@layout/person_show_layout" />

    <include layout="@layout/person_show_layout" />

    <include layout="@layout/person_show_layout" />

    <!--<include layout="@layout/person_show_layout" />-->

    <!--<include layout="@layout/person_show_layout" />-->

    <!--<include layout="@layout/person_show_layout" />-->


</LinearLayout>