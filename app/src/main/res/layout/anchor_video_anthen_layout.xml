<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/call_evaluation_head_rl_height">

        <ImageView
            android:id="@+id/img_arrow_left"
            android:layout_width="15dp"
            android:layout_height="11.3dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/call_evaluation_head_arrow_left_margin_left"
            android:src="@mipmap/arrow_left3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/anchor_anthen"
            android:textColor="#ff5491"
            android:textSize="@dimen/call_evaluation_head_txt_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#eeeeee" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="23.7dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="69.7dp"
            android:layout_height="1.5dp"
            android:background="#ff5491" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:src="@mipmap/ren_zheng_pink" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.7dp"
            android:text="视频认证"
            android:textColor="#ff5491"
            android:textSize="15sp" />

        <View
            android:layout_width="69.7dp"
            android:layout_height="1.5dp"
            android:layout_marginLeft="31dp"
            android:background="#ff5491" />
    </LinearLayout>

    <ImageView
        android:layout_width="53.7dp"
        android:layout_height="53.7dp"
        android:layout_gravity="center"
        android:layout_marginTop="91dp"
        android:src="@mipmap/regist_video" />

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="26.3dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击录制"
            android:textColor="#ff5491"
            android:textSize="15sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#ff5491" />
    </LinearLayout>

    <Button
        android:layout_width="340.3dp"
        android:layout_height="40.7dp"
        android:layout_gravity="center"
        android:layout_marginTop="112dp"
        android:background="@mipmap/anthen_btn"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="18.3dp"
        android:text="温馨提示: 认证视频将用于主播预览视频"
        android:textColor="#545454"
        android:textSize="15sp" />

</LinearLayout>